<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp"
	xmlns:web="http://xmlns.jcp.org/xml/ns/javaee">
	<display-name>Daily Report</display-name>
	<welcome-file-list>
		<welcome-file>login</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Jersey RESTful Application</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>controller.restful</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Jersey RESTful Application</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<resource-ref>
		<description>JNDI Datasource</description>
		<res-ref-name>jdbc/DailyReport</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
<!-- 	<listener> -->
<!-- 		<listener-class>common.listener.Listener</listener-class> -->
<!-- 	</listener> -->
</web-app>